<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddCategoryActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imgAddCategoryBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/txtAddcategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addcategory"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/muli_black"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtAddcategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Input category name:"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/ic_baseline_airline_seat_legroom_normal_24"
            app:endIconTint="@color/black"
            app:endIconMode="clear_text"
            android:textColorHint="@color/black"
            app:startIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:fontFamily="@font/muli"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:id="@+id/imgAddcategoryAddImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/drinkfood"/>
        <Button
            android:id="@+id/btnAddcategoryCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:elevation="5dp"
            android:text="Add a category"
            android:textColor="@color/white"
            app:backgroundTint="@color/black"/>
    </LinearLayout>
</LinearLayout>