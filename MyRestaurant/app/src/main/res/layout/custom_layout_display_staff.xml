<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCustomStaffImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/user_cog_solid"
            android:layout_centerVertical="true"
            app:civ_circle_background_color="@color/black"
            app:civ_border_width="10dp"
            tools:ignore="MissingClass"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgCustomStaffImage"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/txtCustomStaffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Tien"
                android:fontFamily="@font/muli_black"
                android:textSize="24sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtCustomStaffPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manager"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/muli"/>
            <TextView
                android:id="@+id/txtCustomStaffPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: 0948939300"
                android:textColor="@color/black"
                android:fontFamily="@font/muli"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtCustomStaffEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin0110@gmail.com"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/muli"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>